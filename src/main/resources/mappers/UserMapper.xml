<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">

    <select id="getUserAll" resultType="com.example.demo.entity.User">
        SELECT * FROM user
    </select>

    <select id="getUserById" resultType="com.example.demo.entity.User">
        SELECT * FROM user WHERE id = #{id}
    </select>

<!--登入-->
    <select id="getUserByAccountPassword" resultType="com.example.demo.entity.User">
        SELECT id,account,password,name,phone,email,created_time FROM user WHERE account = #{account} AND password = #{password}
    </select>
<!--查詢帳號-->
    <select id="getUserByAccount" resultType="com.example.demo.entity.User">
        SELECT account FROM user WHERE account = #{account}
    </select>

<!--新增用戶-->
    <insert id="saveUser">
        INSERT INTO user (id,account,password,name,phone,email,created_time,updated_time)
        VALUES(null,#{account},#{password},#{name},#{phone},#{email},#{created_time},#{updated_time})
    </insert>

    <update id="updateUser">
        UPDATE user
        <set>
            <if test="password!=null">
                password=#{password},
            </if>

            <if test="name!=null">
                name=#{name},
            </if>

            <if test="phone!=null">
                phone=#{phone},
            </if>

            <if test="email!=null">
                email=#{email},
            </if>
        </set>
        where id= #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM user WHERE id = #{id}
    </delete>

    <select id="selectByUsername" resultType="com.example.demo.entity.User">
        SELECT * FROM user WHERE username=#{username}
    </select>
</mapper>